<?xml version="1.0" encoding="utf-8"?>
<extension version="3.3" type="plugin" group="crowdfundingpayment" method="upgrade">
    <name>PLG_CROWDFUNDINGPAYMENT_WEPAY</name>
    <author>Todor Iliev</author>
    <copyright>Copyright (C) 2014 Todor Iliev ( ITPrism.com ). All rights reserved.</copyright>
    <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
    <authorEmail>todor@itprism.com</authorEmail>
    <authorUrl>http://itprism.com</authorUrl>
    <version>1.4</version>
    <creationDate>16 November, 2014</creationDate>
    <description><![CDATA[
	<p>CrowdFunding Payment - WePay is a plugin that provides functionality for making a payment via WePay, using iFrame form method.</p>
    <p><strong>NOTE</strong>: WePay only works with USD.</p>
    <p>Invest in the extension and help for its improvement. You can <a href="http://itprism.com/sponsorship" target="_blank">sponsor the extension via SMS, PayPal or Bitcoin</a>.</p>
	<p><a href='http://itprism.com/' target='_blank'>Subscribe for the newsletter</a> to receive information about updates and new ITPrism extensions.</p>
	<p>Please, <a href='http://extensions.joomla.org/extensions/e-commerce/donations/23876' target='_blank'>vote for the extension</a> on Joomla! Extensions Directory</p>
	]]></description>
    
    <help url="PLG_CROWDFUNDINGPAYMENT_WEPAY_HELP_URL"/>
    
    <files>
        <filename plugin="wepay">wepay.php</filename>
        <filename>index.html</filename>
        
        <folder>language</folder>
		<folder>images</folder>
    </files>
    
    <config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/administrator/components/com_crowdfunding/models/fields">
			
    	        <field name="wepay_account_id" type="text" label="PLG_CROWDFUNDINGPAYMENT_WEPAY_ACCOUNT_ID" description="PLG_CROWDFUNDINGPAYMENT_WEPAY_ACCOUNT_ID_DESC" />
    	        <field name="wepay_access_token" type="text" label="PLG_CROWDFUNDINGPAYMENT_WEPAY_ACCESS_TOKEN" description="PLG_CROWDFUNDINGPAYMENT_WEPAY_ACCESS_TOKEN_DESC" size="10" class="span10" />
                <field name="wepay_client_id" type="text" label="PLG_CROWDFUNDINGPAYMENT_WEPAY_CLIENT_ID" description="PLG_CROWDFUNDINGPAYMENT_WEPAY_CLIENT_ID_DESC" />
                <field name="wepay_client_secret" type="text" label="PLG_CROWDFUNDINGPAYMENT_WEPAY_CLIENT_SECRET" description="PLG_CROWDFUNDINGPAYMENT_WEPAY_CLIENT_SECRET_DESC" />
                <field name="wepay_return_url" type="text" label="PLG_CROWDFUNDINGPAYMENT_WEPAY_REDIRECT_URL" description="PLG_CROWDFUNDINGPAYMENT_WEPAY_REDIRECT_URL_DESC" class="span6" />
                <field name="wepay_notify_url" type="text" default="index.php?option=com_crowdfunding&amp;task=notifier.notify&amp;format=raw&amp;payment_service=wepay" label="PLG_CROWDFUNDINGPAYMENT_WEPAY_NOTIFY_URL" description="PLG_CROWDFUNDINGPAYMENT_WEPAY_NOTIFY_URL_DESC" class="span6" />
                
                <field name="wepay_display_info" type="radio" default="1" label="PLG_CROWDFUNDINGPAYMENT_WEPAY_DISPLAY_INFO" description="PLG_CROWDFUNDINGPAYMENT_WEPAY_DISPLAY_INFO_DESC" class="btn-group" >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                
                <field name="wepay_use_cacert" type="radio" default="0" label="PLG_CROWDFUNDINGPAYMENT_WEPAY_USE_CUSTOM_CERTIFICATE" description="PLG_CROWDFUNDINGPAYMENT_WEPAY_USE_CUSTOM_CERTIFICATE_DESC" class="btn-group" >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
			</fieldset>

            <fieldset name="sandbox" label="PLG_CROWDFUNDINGPAYMENT_WEPAY_STAGING">
                <field name="wepay_staging" type="radio" default="1" label="PLG_CROWDFUNDINGPAYMENT_WEPAY_ENABLE_STAGING" description="PLG_CROWDFUNDINGPAYMENT_WEPAY_STAGING_DESC" class="btn-group">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="wepay_staging_access_token" type="text" label="PLG_CROWDFUNDINGPAYMENT_WEPAY_STAGING_ACCESS_TOKEN" description="PLG_CROWDFUNDINGPAYMENT_WEPAY_STAGING_ACCESS_TOKEN_DESC" size="10" class="span10" />
            </fieldset>

            <fieldset name="emails" label="PLG_CROWDFUNDINGPAYMENT_WEPAY_NOTIFICATION_EMAILS">
                <field name="admin_mail_id" type="cfemails" default="0" label="PLG_CROWDFUNDINGPAYMENT_WEPAY_SEND_MAIL_ADMIN" description="PLG_CROWDFUNDINGPAYMENT_WEPAY_SEND_MAIL_ADMIN_DESC" class="btn-group" />
                <field name="creator_mail_id" type="cfemails" default="0" label="PLG_CROWDFUNDINGPAYMENT_WEPAY_SEND_MAIL_CREATOR" description="PLG_CROWDFUNDINGPAYMENT_WEPAY_SEND_MAIL_CREATOR_DESC" class="btn-group" />
                <field name="user_mail_id" type="cfemails" default="0" label="PLG_CROWDFUNDINGPAYMENT_WEPAY_SEND_MAIL_USER" description="PLG_CROWDFUNDINGPAYMENT_WEPAY_SEND_MAIL_USER_DESC" class="btn-group" />

                <field name="email_mode" type="list" default="html" label="PLG_CROWDFUNDINGPAYMENT_WEPAY_EMAIL_MODE" description="PLG_CROWDFUNDINGPAYMENT_WEPAY_EMAIL_MODE_DESC" >
                    <option value="plain">PLG_CROWDFUNDINGPAYMENT_WEPAY_PLAIN</option>
                    <option value="html">PLG_CROWDFUNDINGPAYMENT_WEPAY_HTML</option>
                </field>
            </fieldset>
	            
        </fields>
	</config>
</extension>
